{
  "kind": "collectionType",
  "collectionName": "deals",
  "info": {
    "singularName": "deal",
    "pluralName": "deals",
    "displayName": "Deal",
    "description": ""
  },
  "options": {
    "draftAndPublish": false
  },
  "pluginOptions": {},
  "attributes": {
    "name": {
      "type": "string",
      "required": true
    },
    "stage": {
      "type": "enumeration",
      "enum": ["new", "sourcing", "negotiating", "won", "lost"]
    },
    "company": {
      "type": "relation",
      "relation": "manyToOne",
      "target": "api::company.company",
      "inversedBy": "deals"
    },
    "contact": {
      "type": "relation",
      "relation": "manyToOne",
      "target": "api::contact.contact",
      "inversedBy": "deals"
    },
    "lead": {
      "type": "relation",
      "relation": "manyToOne",
      "target": "api::lead.lead",
      "inversedBy": "deals"
    },
    "budget": {
      "type": "decimal",
      "required": false
    },
    "startDate": {
      "type": "datetime"
    },
    "notes": {
      "type": "text"
    },
    "tenant": {
      "type": "relation",
      "relation": "oneToOne",
      "target": "api::tenant.tenant"
    },
    "products": {
      "type": "relation",
      "relation": "oneToMany",
      "target": "api::product.product",
      "mappedBy": "deal"
    },
    "files": {
      "allowedTypes": ["images", "files", "videos", "audios"],
      "type": "media",
      "multiple": true
    },
    "employee": {
      "type": "relation",
      "relation": "oneToOne",
      "target": "plugin::users-permissions.user"
    }
  }
}
